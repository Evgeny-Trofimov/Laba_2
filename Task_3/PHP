<?php
echo "Введите последовательность чисел (через пробел): ";
$input = trim(fgets(STDIN)); // Считываем всю строку

// Преобразуем строку в массив целых чисел
$numbers = array_map('intval', explode(' ', $input));

$count = 0;

// Проверяем, сколько чисел равны предыдущему
for ($i = 1; $i < count($numbers); $i++) {
    if ($numbers[$i] === $numbers[$i - 1]) {
        $count++; // Увеличиваем счетчик, если текущее число равно предыдущему
    }
}

// Выводим результат
echo "Результат: " . $count . PHP_EOL;
?>

